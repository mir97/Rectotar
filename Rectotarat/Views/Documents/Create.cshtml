@model Rectotarat.Models.Document

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создать</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Документ</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="RegistrationNumber" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DocumentName" class="form-control" />
                <span asp-validation-for="DocumentName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="DocumentDescription" class="form-control"></textarea>
                <span asp-validation-for="DocumentDescription" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RegistrationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RegistrationDate" class="form-control" />
                <span asp-validation-for="RegistrationDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DocumentURL" class="col-md-2 control-label">Загрузить документ</label>
            <div class="col-md-10">
                <input type="file" name="upload" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Chairperson.Rector.FullName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ChairpersonId" class ="form-control" asp-items="ViewBag.ChairpersonId"></select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-warning" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-sm btn-primary">Вернуться</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="~/lib/jquery-ui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/lib/jquery-ui/ui/i18n/datepicker-ru.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#RegistrationDate").datepicker({ dateFormat: "dd/mm/yy" });
        });
    </script>
}
