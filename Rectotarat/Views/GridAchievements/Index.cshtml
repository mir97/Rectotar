@model SelectList
<script type="text/javascript" language="javascript">
    fireSubmit = function (event) {
        document.forms["searchForm"].submit();
    }</script>
<style>
    .dd{
        display:flex;
        justify-content:space-between;
        width:10%;
        align-items:center;
        margin-top:50px;
    }
    .ui-jqgrid .ui-pg-input {
        height: 20px;
    }

    .ui-jqgrid .ui-jqgrid-pager {
        height: 40px;
    }

        .ui-jqgrid .ui-jqgrid-pager .ui-pg-div {
            font-size: 14px;
        }

    .info {
        display: flex;
        height: 50px;
        width: 100%;
        justify-content: flex-end;
        align-items: center
    }

    .info__univer-name, .info__user-name {
        display: block;
        font-size: 14px;
    }

    .info__user-name {
        margin-right: 50px;
    }
</style>

<body>
    <div class="info">
        <span class="info__user-name">Пользователь: @TempData["Message1"]</span>
        <span class="info__univer-name">Университет: @TempData["Message"]</span>
    </div>
    <form name="searchForm" method="post">
        <div class="form-inline form-group dd">
            <label>Год</label>
            <div class=" ">
                @Html.DropDownList("currentYear", Model as SelectList,
                     htmlAttributes: new { @class = "form-control", onchange = "fireSubmit(event)" })
                <input type="hidden" value="" id="Year" />
            </div>
        </div>
    </form>
    <h2>Показатели для подведения итогов</h2>
    <div>
        <table id="jqGrid"></table>
        <div id="jqControls"></div>
    </div>
    @section scripts{
        <link href="~/lib/jquery-ui/themes/base/jquery-ui.min.css" rel="stylesheet" />
        <link href="~/lib/jqGrid/css/ui.jqgrid.css" rel="stylesheet" />
        <link href="~/lib/jqGrid/css/ui.jqgrid-bootstrap-ui.css" rel="stylesheet" />
        <script src="~/lib/jquery-ui/jquery-ui.js"></script>
        <script src="~/lib/jqGrid/js/i18n/grid.locale-ru.js" type="text/javascript"></script>
        <script src="~/lib/jqGrid/js/jquery.jqGrid.min.js" type="text/javascript"></script>
        <script src="~/js/scriptAchievements.js"></script>

    }


</body>